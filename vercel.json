{
  "version": 2,
  "public": true,
  "buildCommand": "echo 'Frontend ready'",
  "outputDirectory": "src/main/resources/static",
  "env": {
    "API_BASE_URL": "@api_base_url"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-spring-boot-backend.com/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
